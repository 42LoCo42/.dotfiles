# Programs
super + a
	tdrop -w 800 -h 300 -x 560 -y 390 "$TERMINAL" --class floating -e qalc
super + shift + a
	$TERMINAL -e pulsemixer
super + c
	discord
super + shift + c
	pkill Discord && sleep 1 && pkill Discord
super + d
	dmenu_run -i
super + shift + d
	rofi -show drun -modi drun -show-icons
super + e
	emacs -r
super + i
	$TERMINAL -e htop
super + r
	$TERMINAL -e $FILE
super + w
	$TERMINAL -e w3m duckduckgo.com/lite
super + shift + w
	$BROWSER

super + Return
	terminal
super + shift + Return
	"$TERMINAL"
super + F9
	dmenumount
super + F10
	dmenuumount

# Take screenshot
Print
	maim "$HOME/screenshots/pic-full-$(date '+%y%m%d-%H%M-%S').png"
# Pick screenshot type
super + Print
	maimpick

# Increase volume
super + {plus,asterisk}
	pulsemixer --change-volume +{5,15}
# Decrease volume
super + {minus, underscore}
	pulsemixer --change-volume -{5,15}

# System control commands
super + BackSpace
	prompt "Shutdown computer?" sudo -A poweroff
super + shift + BackSpace
	prompt "Reboot computer?" sudo -A reboot
super + control + BackSpace
	prompt "Suspend to RAM?" bash -c 'i3lock -i "$HOME/.config/wall.png"; sus'
super + x
	xset dpms 1 1 3 && xset dpms force off && i3lock -n -i "$HOME/.config/wall.png" && xset dpms 0 0 600
