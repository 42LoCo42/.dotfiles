#!/usr/bin/env bash
atTerm() {
	pid="$(xdotool getwindowfocus getwindowpid)"
	cmd="$(command -v "$TERMINAL")"
	[ "$(realpath "/proc/$pid/exe")" == "$cmd" ]
}

launch() {
	tmux="tmux"
	exec "$TERMINAL" -e bash -c "$tmux a || $tmux"
}

if (($(getcurrentws) == 0)); then
	if atTerm; then
		i3-msg "workspace back_and_forth"
	else
		launch
	fi
else
	i3-msg "workspace 0"
	atTerm || launch
fi
