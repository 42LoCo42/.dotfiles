#!/usr/bin/env bash

die() {
	echo "$@"
	exit 1
}

check() {
	type "$1" >/dev/null 2>&1 || die "$cmd not found"
}

check pause

(($# < 2)) && die "Usage: $0 <config dir> <cmd> [args...]"
dir="$1"
cmd="$2"
[ -d "$dir" ] || die "Not a directory: $dir"
check "$cmd"
shift 2
args=("$@")

cleanup() {
	rm "$file"
	pkill -P "$$"
}
trap cleanup EXIT

generate() {
	find "$dir" -maxdepth 1 -not -type d -print0 | xargs --null cat > "$file"
}
trap generate USR1

restart_child() {
	kill "$child"
	"$cmd" "${args[@]}" "$file" & child="$!"
}
trap restart_child USR2

echo -n "$cmd-wrapper" > /proc/$$/comm
file="$(mktemp -t "config-wrapper-$cmd.XXXXXXXX")"
generate
restart_child
while true; do pause; done
