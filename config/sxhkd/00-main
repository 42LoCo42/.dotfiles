# Programs
super + shift + a
	$TERMINAL -e pulsemixer
super + c
	Discord
super + d
	dmenu_run
super + i
	$TERMINAL -e htop
super + r
	$TERMINAL -e $FILE
super + w
	$TERMINAL -e w3m duckduckgo.com/lite
super + shift + w
	$BROWSER

super + Return
	ucc
super + F9
	dmenumount
super + F10
	dmenuumount

# Take screenshot
Print
	maim "$HOME/screenshots/pic-full-$(date '+%y%m%d-%H%M-%S').png"
# Pick screenshot type
shift + Print
	maimpick

# Increase volume
super + {plus,asterisk}
	pulsemixer --change-volume +{5,15}
# Decrease volume
super + {minus, underscore}
	pulsemixer --change-volume -{5,15}

# System control commands
super + BackSpace
	prompt "Shutdown computer?" "sudo -A shutdown -h now"
super + shift + BackSpace
	prompt "Reboot computer?" "sudo -A shutdown -r now"
super + x
	lockscreen
